<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Newbie</h1>
    <form action="/people" method="post" accept-charset="utf-8">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
      <div class="form-group">
        <input type="text" class="form-control" name="person[first_name]" value="<%= @person.first_name %>" placeholder="First Name" />
      </div>
      <div class="form-group">
        <input type="text"  class="form-control" name="person[last_name]" value="<%= @person.last_name %>" placeholder="Last Name" />
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="person[middle_name]" value="<%= @person.middle_name %>" placeholder="Middle Name" />
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="person[domain]" value="<%= @person.domain %>" placeholder="Domain" />
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="person[company]" value="<%= @person.company %>" placeholder="Company" />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success btn-lg btn-block" value="Create Person and Bake Emails" />
      </div>
    </form>
  </div>
</div>
